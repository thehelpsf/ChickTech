<org.chicktech.chicktech.utils.FragmentNavigationDrawer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- The navigation drawer -->
    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/rlDrawerContainer"
        android:layout_gravity="start"
        >

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/bg_menu"
            android:scaleType="fitStart"
            android:layout_marginLeft="-180dp"
            android:layout_marginTop="-50dp"/>

        <ListView android:id="@+id/lvDrawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            style="@style/CTDrawerMenu"
            />

    </RelativeLayout>

</org.chicktech.chicktech.utils.FragmentNavigationDrawer>
